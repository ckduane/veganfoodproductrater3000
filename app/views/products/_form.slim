=form_for @product do |f|
	=f.label :category
	=select :product, :category_id, @categories.collect{|c| [c.name, c.id]}

	=f.label :brand
	=f.text_field :brand, required: true

	=f.label :name
	=f.text_field :name, required: true

	=f.fields_for :reviews do |r|
		= r.label :rating
		.radio-buttons
			= r.radio_button :rating, 1
			= r.radio_button :rating, 2
			= r.radio_button :rating, 3
			= r.radio_button :rating, 4
			= r.radio_button :rating, 5

		=r.label :comment
		=r.text_area :comment, size: "30x10", required: true

	=f.submit "Save"
