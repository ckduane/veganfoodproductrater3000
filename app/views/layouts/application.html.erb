<!DOCTYPE html>
<html>
<head>
  <title>Vegan Food Product Rater 3000</title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Pacifico" rel="stylesheet">
  
  <script src="https://use.fontawesome.com/f3f0aa6a92.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="overlay"></div>
	<nav>
		<%= fa_icon "bars", class: "menu-bars" %>
		<%= link_to root_path do %>
				<%= fa_icon "home" %> Home
			<% end %>
		<% if user_signed_in? %>
			<%= link_to new_product_path do %>
				<%= fa_icon "plus" %> Add Review
			<% end %>
			<%= link_to current_user do %>
				<%= fa_icon "user-circle" %> <%= current_user.username %>
			<% end %>
			<%= link_to destroy_user_session_path,:method => :delete do %>
			 <%= fa_icon "sign-out" %> Log Out
			<% end %>
		<% else %>
			<%= link_to new_user_registration_path do %>
				<%= fa_icon "user-plus" %> Register
			<% end %>
			<%= link_to new_user_session_path do %>
				<%= fa_icon "sign-in" %> Log In
			<% end %>
		<% end %>
	</nav>
	<header>
		<%= fa_icon "bars" %>
		<input type="text" placeholder="search for a product" class="search-bar">
			<i class="fa fa-search" aria-hidden="true"></i>
	</header>
	<h1><%= link_to "Vegan Food Product Rater 3000", root_path %></h1>
	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<div class="container">
<%= yield %>
</div>

</body>
</html>
